<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.cmucreatelab.mfm_android.activities.fragments.SessionInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/f_session_info_from_container"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From:"
                android:textColor="@color/White"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.cmucreatelab.mfm_android.ui.ExtendedHeightGridView
                    android:id="@+id/f_session_info_from"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="auto_fit">
                </org.cmucreatelab.mfm_android.ui.ExtendedHeightGridView>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/f_session_info_to_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To:"
                android:textColor="@color/White"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <org.cmucreatelab.mfm_android.ui.ExtendedHeightGridView
                    android:id="@+id/f_session_info_recipients"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="auto_fit">
                </org.cmucreatelab.mfm_android.ui.ExtendedHeightGridView>

            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/f_session_info_media_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="2dp" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/f_session_info_media_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/button_up_photo"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"
                    android:padding="50dp"
                    android:background="@drawable/box" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/f_session_info_media_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/button_disabled_talk"
                    android:adjustViewBounds="true"
                    android:padding="50dp"
                    android:scaleType="centerInside"
                    android:layout_centerInParent="true"
                    android:background="@drawable/box" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <ImageView
                android:id="@+id/f_session_info_send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/send_disabled"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>